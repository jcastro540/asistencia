<!DOCTYPE html>
<html lang="en">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
        <!-- Meta, title, CSS, favicons, etc. -->
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>Login</title>
        {% block stylesheets %} 
            <!-- inculir estilos css -->
            <link rel="stylesheet" href="{{asset('assets/vendors/bootstrap/dist/css/bootstrap.min.css')}}"/>
            <link rel="stylesheet" href="{{asset('assets/vendors/font-awesome/css/font-awesome.min.css')}}"/>
            <link rel="stylesheet" href="{{asset('https://colorlib.com/polygon/gentelella/css/animate.min.css')}}"/>
            <link rel="stylesheet" href="{{asset('assets/build/css/custom.min.css')}}"/>
            <link rel="stylesheet" href="{{asset('assets/css/main.css')}}"/>
        {%endblock%}
        <script src="{{asset('assets/vendors/jquery/dist/jquery.min.js')}}"></script>
        <script src="{{asset('assets/vendors/bootstrap/dist/js/bootstrap.min.js')}}"></script>
    </head>

    <body class="login">
        <div class="row">
            <article class="col-md-12">
                {% if error%}
                    <div class="alert alert-danger">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{error.message | replace({"Bad credentials." : "Usuario o Contraseña invalido"})}}
                    </div>
                {%endif%}
            </article>
        </div>
        <div>
            <a class="hiddenanchor" id="signup"></a>
            <a class="hiddenanchor" id="signin"></a>

            <div class="login_wrapper">
                <div class="animate form login_form">
                    <section class="login_content">
                        <form action="{{path('login_check')}}" method="POST">
                            <h1>Iniciar Sesión</h1>


                            <div>
                                <input type="text" class="form-control" id="username" value="{{last_username}}" name="_username" value="" placeholder="Username"/>
                            </div>
                            <div>
                                <input type="password" class="form-control" id="password" name="_password" placeholder="Password" />
                            </div>
                            <div>
                                <input class="btn btn-info btn-block submit" type="submit" value="Log in">
                                <input type="hidden" name="_target_path" value="/home">
                            </div>

                            <div class="clearfix"></div>

                            <div class="separator">

                                <div class="clearfix"></div>
                                <br/>
                                <div>
                                    <p>© Control de Asistencia 2016</p>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </body>
</html>