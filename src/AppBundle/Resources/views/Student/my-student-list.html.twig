{%extends "AppBundle:Layouts:layout.html.twig"%}

{% block stylesheets %} 
    {{parent()}}
    <link rel="stylesheet" href="{{asset('assets/css/dataTable/dataTables.bootstrap.min.css')}}"/>
{% endblock %}

{% block javascript %}
    {{parent()}}
    <script src="{{asset(('assets/js/custom/dataTables/jquery.dataTables.min.js'))}}"></script>
    <script src="{{asset(('assets/js/custom/dataTables/dataTables.bootstrap.min.js'))}}"></script>
    <script src="{{asset(('assets/js/custom/dataTables/buttons.html5.min.js'))}}"></script>
    <script src="{{asset(('assets/js/custom/dataTables/buttons.print.min.js'))}}"></script>
    <script src="{{asset(('assets/js/custom/dataTables/dataTables.fixedHeader.min.js'))}}"></script>
    <script src="{{asset(('assets/js/custom/tables.js'))}}"></script>  

{% endblock %}

{%block content%}
    <!-- page content -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Mis alumnos</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li><a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div class="table-responsive">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Curso</th>
                                    <th>Clases</th>
                                    <th>Inicio</th>
                                    <th>Fin</th>
                                    <th>Profesor</th>
                                </tr>
                            </thead>
                            <tbody>
                                {%for student in students%}                                
                                <tr>
                                    <td>{{student.name}}</td>
                                    <td>{{student.email}}</td>
                                    <td>{{student.courses.name}}</td>
                                    <td>{{student.courses.numclass}}</td>
                                    <td>{{student.courses.startdate|date('d/m/Y')}}</td>
                                    <td>{{student.courses.enddate|date('d/m/Y')}}</td>
                                    <td>{{student.user.name}} {{student.user.surname}}</td>
                                </tr>
                                {%endfor%}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}